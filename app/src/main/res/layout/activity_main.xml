<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/totalCustomEditText"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="54dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="TIP CALCULATOR"
            android:textColor="#1a46f5"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            android:text="1. Enter your bill amount in order to calculate tip"
            android:textColor="#4245f7"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="104dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:tint="#e3eef3"
            app:srcCompat="@android:drawable/editbox_background_normal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="188dp"
            android:text="2. Choose preferable persentage of tip"
            android:textColor="#4245f7"
            android:textStyle="italic" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="10"
            android:scrollbarStyle="outsideOverlay"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_toStartOf="@+id/textView"
            android:tint="#fbd9e1"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="183dp"
            android:text="3. TIP"
            android:textColor="#4245f7" />

        <TextView
            android:id="@+id/tipCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="112dp"
            android:text="@string/MainActivityTextViewTip"
            android:textColor="#4245f7" />

        <TextView
            android:id="@+id/totalCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="63dp"
            android:text="@string/MainActivityTextViewTotal"
            android:textColor="#4245f7" />

        <EditText
            android:id="@+id/billEditText"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="text|textPersonName"
            android:singleLine="true"
            android:text="@string/MainActivityEditTextZero"
            android:textColor="#c8c8c8"
            android:visibility="visible" />

        <EditText
            android:id="@+id/tipCustomEditText"
            android:layout_width="136dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="104dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/customTipTextView"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/seekBar"
            android:text="@string/MainActivityTextViewCustomTip" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>